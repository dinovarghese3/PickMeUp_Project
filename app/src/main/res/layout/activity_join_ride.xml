<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbluew"
    android:orientation="vertical">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".JoinRide.JoinRideActivity"
        tools:layout_editor_absoluteX="-16dp">

        <com.github.clans.fab.FloatingActionMenu

            android:id="@+id/floatingMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@id/map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            fab:menu_animationDelayPerItem="0"
            fab:menu_backgroundColor="#ccffffff"
            fab:menu_colorNormal="#00C29F"
            fab:menu_colorPressed="#00C29F"
            fab:menu_colorRipple="#00C29F"
            fab:menu_fab_label="Cancel"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_singleLine="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/Noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_complaint_24dp"
                fab:fab_label="Notifications"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account"
                fab:fab_label="Profile"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:src="@drawable/ic_logout"
                fab:fab_label="Logout"
                fab:fab_size="mini" />

        </com.github.clans.fab.FloatingActionMenu>

    </fragment>

    <com.google.android.material.circularreveal.CircularRevealGridLayout
        android:id="@+id/rect"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@drawable/rect"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.997"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/destsrch"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:hint="Search Ride"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColorHint="#000" />

        <Button
            android:id="@+id/srch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:text="Search"
            android:textColor="#000" />


    </com.google.android.material.circularreveal.CircularRevealGridLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rect"
        tools:layout_editor_absoluteX="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/riderrecycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mapbg"
            app:cardCornerRadius="50dp" />
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>