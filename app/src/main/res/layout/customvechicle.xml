<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AC9B9B">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/uvname"
        android:textColorHint="#000"
        android:textColor="#000"
        android:background="@drawable/button"
        android:layout_margin="10dp"
        android:hint="Enter your vechicle Name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/uvno"
        android:textColorHint="#000"
        android:textColor="#000"
        android:background="@drawable/button"
        android:layout_margin="10dp"
        android:hint="Enter your vechicle Number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/useat"
        android:textColorHint="#000"
        android:textColor="#000"
        android:background="@drawable/button"
        android:layout_margin="10dp"
        android:hint="Enter your seat Capacity"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uupload"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:text="upload your lisence"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uupdate"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Update"/>
</LinearLayout>